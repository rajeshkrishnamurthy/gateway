<main class="page">
  <header class="page-header">
    <div class="brand">
      <h1>SMS Gateway Console</h1>
      <p>Submission-only gateway. Logs explain what happened. Metrics are aggregates.</p>
    </div>
    {{template "nav.tmpl" .}}
  </header>

  <section class="panel">
    <h2>Gateway status</h2>
    <dl class="kv">
      <div>
        <dt>Gateway</dt>
        <dd>{{.GatewayName}} v{{.Version}}</dd>
      </div>
      <div>
        <dt>Active provider</dt>
        <dd>{{.ProviderName}}</dd>
      </div>
      <div>
        <dt>Provider timeout</dt>
        <dd>{{.ProviderTimeout}}</dd>
      </div>
      <div>
        <dt>Process uptime</dt>
        <dd>{{.Uptime}}</dd>
      </div>
    </dl>
  </section>

  <section class="note">
    Accepted means submitted, not delivered. This console does not track delivery, retries, or history.
  </section>
</main>
