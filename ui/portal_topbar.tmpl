<div class="topbar portal-topbar">
  <div class="topbar-brand">
    <svg class="topbar-logo" viewBox="0 0 48 24" aria-hidden="true" focusable="false">
      <path d="M2 18c6-10 12-14 22-14s16 4 22 14" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
