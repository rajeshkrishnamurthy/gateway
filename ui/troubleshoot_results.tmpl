<table class="table">
  <thead>
    <tr>
      <th>Log results for {{.ReferenceID}}</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <div class="table-section">
          <h3>Decision summary</h3>
          <dl class="kv">
            <div>
              <dt>Provider decision</dt>
              <dd>{{if .ProviderDecision}}{{.ProviderDecision}}{{else}}-{{end}}</dd>
            </div>
            <div>
              <dt>Mapping decision</dt>
              <dd>{{if .MappingDecision}}{{.MappingDecision}}{{else}}-{{end}}</dd>
            </div>
            <div>
              <dt>Final outcome</dt>
              <dd>{{if .FinalOutcome}}{{.FinalOutcome}}{{else}}-{{end}}</dd>
            </div>
          </dl>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="table-section">
          <h3>Recent log lines</h3>
          {{if .Entries}}
          <ol class="log-list">
            {{range .Entries}}
            <li>
              {{if .Timestamp}}<span class="log-meta">{{.Timestamp}}</span>{{end}}
              <span class="log-line">{{.Line}}</span>
            </li>
            {{end}}
          </ol>
          {{else}}
          <p class="muted">No log entries found for this referenceId.</p>
          {{end}}
        </div>
      </td>
    </tr>
  </tbody>
</table>
