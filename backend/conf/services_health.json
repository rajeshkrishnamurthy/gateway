# Services health configuration for Docker Compose.
{
  "services": [
    {
      "id": "sms-gateway-1",
      "label": "SMS Gateway (1)",
      "startCommand": [
        "docker",
        "compose",
        "-f",
        "../docker-compose.yml",
        "up",
        "-d",
        "sms-gateway-1"
      ],
      "stopCommand": [
        "docker",
        "compose",
        "-f",
        "../docker-compose.yml",
        "stop",
        "sms-gateway-1"
      ],
      "instances": [
        {
          "name": "sms-1",
          "addr": ":18080",
          "uiUrl": "http://localhost:18080/ui"
        }
      ]
    },
    {
      "id": "sms-gateway-2",
