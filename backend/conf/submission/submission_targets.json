# SubmissionTarget registry for Docker Compose.
# Full-line # comments are allowed; inline comments are not.
# allowUnsignedWebhooks must remain false in enterprise deployments.
{
  "allowUnsignedWebhooks": true,
  "targets": [
    {
      "submissionTarget": "sms.realtime",
      "gatewayType": "sms",
      "gatewayUrl": "http://localhost:8080",
      "policy": "deadline",
      "maxAcceptanceSeconds": 30,
      "terminalOutcomes": ["invalid_request", "invalid_recipient", "invalid_message"]
    },
    {
      "submissionTarget": "push.realtime",
      "gatewayType": "push",
      "gatewayUrl": "http://localhost:8081",
      "policy": "deadline",
      "maxAcceptanceSeconds": 30,
      "terminalOutcomes": ["invalid_request", "unregistered_token"]
    }
  ]
}
